{
  "name": "Mastodon Link",
  "version": "1.2.0",
  "author": "Alexander Haslam <@indiealexh@tny.social>",
  "manifest_version": 3,
  "description": "Extension to make it easy to visit mastodon profiles from your instance",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}